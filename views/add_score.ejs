<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/header %>
    <div class="container">
      <h2>Add Score</h2>
      <% if(err) { %>
        <div class="card text-white bg-danger">
          <div class="card-body">
            <%= err.message %>
          </div>
        </div>
        <br>
      <% } %>
      <form action="/subjects/<%= subject.id %>/<%= student.id %>/givescore" method="post">
        <table class="table">
          <tr>
            <td>Name</td>
            <td>:</td>
            <td><%= student.getFullName() %></td>
          </tr>
          <tr>
            <td>Subject</td>
            <td>:</td>
            <td><%= subject.subject_name %></td>
          </tr>
          <tr>
            <td>Score</td>
            <td>:</td>
            <td><input type="text" name="score" value="<%= repopulate ? repopulate.score : "" %>" required></br></td>
          </tr>
          <tr>
            <td colspan="3"><input class="btn btn-primary" type="submit" name="submit" value="Update"></td>
          </tr>
          <input type="hidden" name="studentId" value="<%= student.id %>">
          <input type="hidden" name="subjectId" value="<%= subject.id %>">
        </table>
      </form>
    </div>
    <% include ./partials/footer %>
  </body>
</html>
